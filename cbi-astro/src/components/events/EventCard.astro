---
import { Image } from "astro:assets"
import type { ImageMetadata } from "astro"
import { Calendar1, Star, ExternalLink } from "@lucide/astro"

interface Props {
  id: number
  title: string
  category: string
  tagline: string
  description: string
  date: string | null
  image: string | ImageMetadata
  featured?: boolean
  index?: number
  hasDetailPage?: boolean
  pageUrl?: string | null
  registrationLink?: string | null
}

const {
  id,
  title,
  category,
  tagline,
  description,
  date,
  image,
  featured = false,
  index = 0,
  hasDetailPage = true,
  pageUrl = null,
  registrationLink = null,
} = Astro.props

// Check if image is a local import (ImageMetadata) or external URL
const isLocalImage = typeof image !== "string"

// Determine the link behavior
const eventLink = hasDetailPage && pageUrl
  ? pageUrl
  : registrationLink || null
const isExternalLink = !hasDetailPage && registrationLink
---

{eventLink ? (
  <a
    href={eventLink}
    target={isExternalLink ? "_blank" : undefined}
    rel={isExternalLink ? "noopener noreferrer" : undefined}
    class="event-card group relative block bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 cursor-pointer"
    style={`animation-delay: ${index * 100}ms;`}>
    <!-- Image Container -->
    <div class="relative h-56 overflow-hidden">
      {
        isLocalImage ? (
          <Image
            src={image as ImageMetadata}
            alt={title}
            width={600}
            height={400}
            format="webp"
            quality={80}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            loading="lazy"
          />
        ) : (
          <img
            src={image as string}
            alt={title}
            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            loading="lazy"
          />
        )
      }
      <div
        class="absolute inset-0 bg-linear-to-t from-black/80 via-black/30 to-transparent">
      </div>

      <!-- Category Badge -->
      <div class="absolute top-4 left-4">
        <span
          class="inline-block bg-primary text-white text-xs font-semibold px-3 py-1 rounded-full uppercase tracking-wider">
          {category}
        </span>
      </div>

      {
        featured && (
          <div class="absolute top-4 right-4">
            <span class="inline-flex items-center gap-1 bg-white/90 text-accent text-xs font-semibold px-3 py-1 rounded-full">
              <Star class="w-3 h-3" fill="currentColor" />
              Destacado
            </span>
          </div>
        )
      }

      <!-- Date Badge on Image -->
      {date && (
        <div class="absolute bottom-4 left-4">
          <span
            class="inline-flex items-center gap-2 text-white text-sm font-medium">
            <Calendar1 class="w-4 h-4" />
            {date}
          </span>
        </div>
      )}
    </div>

    <!-- Content -->
    <div class="p-6">
      <!-- Tagline -->
      <p class="text-primary text-sm font-semibold mb-2 uppercase tracking-wide">
        {tagline}
      </p>

      <!-- Title -->
      <h3
        class="text-2xl font-bold text-accent mb-3 group-hover:text-primary transition-colors duration-300"
        style="font-family: 'Bebas Neue', sans-serif;">
        {title}
      </h3>

      <!-- Description -->
      <p class="text-gray-600 text-sm leading-relaxed line-clamp-3 mb-4">
        {description}
      </p>

      <!-- Action indicator -->
      <span class="inline-flex items-center gap-2 text-primary font-semibold text-sm">
        {isExternalLink ? "Inscríbete" : "Más información"}
        {
          isExternalLink ? (
            <ExternalLink class="w-4 h-4" />
          ) : (
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M17 8l4 4m0 0l-4 4m4-4H3"
              />
            </svg>
          )
        }
      </span>
    </div>

    <!-- Decorative Corner -->
    <div
      class="absolute top-0 right-0 w-20 h-20 bg-primary/5 rounded-bl-full opacity-0 group-hover:opacity-100 transition-opacity duration-500">
    </div>
  </a>
) : (
  <article
    class="event-card group relative bg-white rounded-2xl overflow-hidden shadow-lg transition-all duration-500"
    style={`animation-delay: ${index * 100}ms;`}>
    <!-- Image Container -->
    <div class="relative h-56 overflow-hidden">
      {
        isLocalImage ? (
          <Image
            src={image as ImageMetadata}
            alt={title}
            width={600}
            height={400}
            format="webp"
            quality={80}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        ) : (
          <img
            src={image as string}
            alt={title}
            class="w-full h-full object-cover"
            loading="lazy"
          />
        )
      }
      <div
        class="absolute inset-0 bg-linear-to-t from-black/80 via-black/30 to-transparent">
      </div>

      <!-- Category Badge -->
      <div class="absolute top-4 left-4">
        <span
          class="inline-block bg-primary text-white text-xs font-semibold px-3 py-1 rounded-full uppercase tracking-wider">
          {category}
        </span>
      </div>

      {
        featured && (
          <div class="absolute top-4 right-4">
            <span class="inline-flex items-center gap-1 bg-white/90 text-accent text-xs font-semibold px-3 py-1 rounded-full">
              <Star class="w-3 h-3" fill="currentColor" />
              Destacado
            </span>
          </div>
        )
      }

      <!-- Date Badge on Image -->
      {date && (
        <div class="absolute bottom-4 left-4">
          <span
            class="inline-flex items-center gap-2 text-white text-sm font-medium">
            <Calendar1 class="w-4 h-4" />
            {date}
          </span>
        </div>
      )}
    </div>

    <!-- Content -->
    <div class="p-6">
      <!-- Tagline -->
      <p class="text-primary text-sm font-semibold mb-2 uppercase tracking-wide">
        {tagline}
      </p>

      <!-- Title -->
      <h3
        class="text-2xl font-bold text-accent mb-3"
        style="font-family: 'Bebas Neue', sans-serif;">
        {title}
      </h3>

      <!-- Description -->
      <p class="text-gray-600 text-sm leading-relaxed line-clamp-3">
        {description}
      </p>
    </div>
  </article>
)}

<style>
  .event-card {
    opacity: 0;
    animation: fade-in-up 0.6s ease-out forwards;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
