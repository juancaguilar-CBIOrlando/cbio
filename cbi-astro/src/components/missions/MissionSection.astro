---
import MissionsSlider from "./MissionsSlider.astro"

type Slide = {
  id: string
  title: string
  image: ImageMetadata
}

interface Props {
  eyebrow?: string
  title: string
  description?: string
  ctaText?: string
  ctaHref?: string
  sliderName: string
  slides: Slide[]
}

const { eyebrow, title, description, ctaText, ctaHref, sliderName, slides } =
  Astro.props
---

<section class="py-18 px-6 lg:px-16">
  <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-14 items-start">
    <div class="pt-2">
      {eyebrow && (
        <p class="text-sm font-semibold tracking-widest uppercase text-black/60">
          {eyebrow}
        </p>
      )}

      <h2 class="font-bebas text-5xl sm:text-6xl lg:text-7xl leading-[0.95] text-black mt-3">
        {title}
      </h2>

      {description && (
        <p class="mt-5 text-black/70 text-lg leading-relaxed max-w-prose">
          {description}
        </p>
      )}

      {ctaText && ctaHref && (
        <a
          href={ctaHref}
          class="inline-flex mt-8 bg-black text-white px-8 py-3 rounded-full font-semibold tracking-widest uppercase text-sm hover:bg-black/85 transition-colors"
        >
          {ctaText}
        </a>
      )}
    </div>

    <div>
      <MissionsSlider name={sliderName} slides={slides} ariaLabel={title} />
    </div>
  </div>
</section>

