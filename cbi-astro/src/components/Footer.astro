---
import Text from "./common/Text.astro"

const routes = [
  { name: "Inicio", path: "/" },
  { name: "Blog", path: "/blog" },
  { name: "Conectate", path: "/conectate" },
  { name: "Donation", path: "/donation" },
]
const currentYear = new Date().getFullYear()
---

<footer class="bg-gray-300 text-gray-900 py-12 px-4 md:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-8 mb-8">
      <!-- Visitanos & Social Section -->
      <div class="flex flex-col items-center">
        <!-- Logo -->
        <div class="p-1">
          <img src="/mainLogoBlack.png" alt="CBI Orlando" class="h-24 w-auto" />
        </div>
        <div class="space-y-1 mx-auto mb-2">
          <Text as="p" variant="subtitle" class="max-w-[200px] text-center"
            >7507 Kingspointe Pkwy STE 104, Orlando, FL 32819</Text
          >
          <Text as="p" variant="subtitle" class="max-w-[200px] text-center"
            >689-234-5678</Text
          >
        </div>

        <!-- Social Media Icons -->
        <div class="flex gap-3 mx-auto">
          <a
            href="https://www.facebook.com"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full flex items-center justify-center hover:bg-gray-800 hover:text-white transition-colors bg-gray-200"
            aria-label="Facebook">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
              ></path>
            </svg>
          </a>
          <a
            href="https://www.instagram.com"
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full flex items-center justify-center hover:bg-gray-800 hover:text-white transition-colors bg-gray-200"
            aria-label="Instagram">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
              ></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Soy Nuevo & Next Steps Combined Section -->
      <div class="flex flex-col">
        <!-- Soy Nuevo -->
        <Text variant="title" as="h3" class="text-center">Soy Nuevo</Text>
        <ul class="space-y-1 mx-auto mb-2">
          <li>
            <a
              href="/visitanos"
              class="text-gray-700 hover:text-[#3498db] transition-colors">
              <Text as="p" variant="subtitle" class="max-w-[200px] text-center"
                >Planea Una Visita</Text
              >
            </a>
          </li>
          <li>
            <a
              href="/valores"
              class="text-gray-700 hover:text-[#3498db] transition-colors">
              <Text as="p" variant="subtitle" class="max-w-[200px] text-center"
                >Nuestros Valores</Text
              >
            </a>
          </li>
          <li>
            <a
              href="/visitanos"
              class="text-gray-700 hover:text-[#3498db] transition-colors">
              <Text as="p" variant="subtitle" class="max-w-[200px] text-center"
                >Pastores</Text
              >
            </a>
          </li>
        </ul>

        <!-- Next Steps -->
        <Text variant="title" as="h3" class="mt-2 text-center">Next Steps</Text>
        <ul class="space-y-1 mx-auto">
          <li>
            <a
              href="/servicios"
              class="text-gray-700 hover:text-[#3498db] transition-colors">
              <Text as="p" variant="subtitle" class="max-w-[200px] text-center"
                >Grupos de Conexión</Text
              >
            </a>
          </li>
          <li>
            <a
              href="/conectate"
              class="text-gray-700 hover:text-[#3498db] transition-colors">
              <Text as="p" variant="subtitle" class="max-w-[200px] text-center"
                >Clases de Conexión</Text
              >
            </a>
          </li>
          <li>
            <a
              href="/dream-team"
              class="text-gray-700 hover:text-[#3498db] transition-colors">
              <Text as="p" variant="subtitle" class="max-w-[200px] text-center"
                >El Dream Team</Text
              >
            </a>
          </li>
          <li>
            <a
              href="/dar"
              class="text-gray-700 hover:text-[#3498db] transition-colors">
              <Text as="p" variant="subtitle" class="max-w-[200px] text-center"
                >Dar</Text
              >
            </a>
          </li>
          <li>
            <a
              href="/devocional"
              class="text-gray-700 hover:text-[#3498db] transition-colors">
              <Text as="p" variant="subtitle" class="max-w-[200px] text-center"
                >Devocional</Text
              >
            </a>
          </li>
        </ul>
      </div>

      <!-- Sedes CBI -->
      <div class="flex flex-col">
        <Text variant="title" as="h4" class="text-center">Sedes CBI</Text>
        <ul class="space-y-1 mx-auto">
          <li>
            <a
              href="https://www.cbint.org"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 hover:text-primary transition-colors inline-flex items-center gap-1 group">
              <Text
                as="span"
                variant="subtitle"
                class="max-w-[200px] text-center group-hover:text-primary"
                >Barranquilla</Text
              >
            </a>
          </li>

          <li>
            <a
              href="https://www.facebook.com/CBIBCN"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 hover:text-primary transition-colors inline-flex items-center gap-1 group">
              <Text
                as="span"
                variant="subtitle"
                class="max-w-[200px] text-center group-hover:text-primary"
                >Barcelona</Text
              >
            </a>
          </li>

          <li>
            <a
              href="https://www.facebook.com/CbintNJ"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 hover:text-primary transition-colors inline-flex items-center gap-1 group">
              <Text
                as="span"
                variant="subtitle"
                class="max-w-[200px] text-center group-hover:text-primary"
                >New Jersey</Text
              >
            </a>
          </li>

          <li>
            <a
              href="https://www.facebook.com/cbistcloud"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 hover:text-primary transition-colors inline-flex items-center gap-1 group">
              <Text
                as="span"
                variant="subtitle"
                class="max-w-[200px] text-center group-hover:text-primary"
                >St. Cloud</Text
              >
            </a>
          </li>

          <li>
            <a
              href="/iglesias"
              class="font-bold hover:text-primary transition-colors group">
              <Text
                as="p"
                variant="subtitle"
                class="uppercase tracking-wide group-hover:text-primary"
                >Ver Todas</Text
              >
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright Section -->
    <div class="border-t border-gray-300 pt-6 mt-8">
      <Text variant="subtitle" class="text-center">
        ©{currentYear} CBI Orlando | All rights reserved
      </Text>
    </div>
  </div>
</footer>
