---
import { Image } from "astro:assets"
import Layout from "../../layouts/Layout.astro"
import MissionSection from "../../components/missions/MissionSection.astro"
import { missionsSlides, exSlides } from "../../helpers/missionsData.js"

import heroBg from "../../assets/mujeres.jpg"
---

<Layout navLogo="white">
  <main class="bg-white">
    <header class="relative min-h-[70vh] flex items-center">
      <div class="absolute inset-0">
        <Image
          src={heroBg}
          alt="Misiones"
          width={1920}
          height={1080}
          quality={75}
          class="w-full h-full object-cover"
          loading="eager"
        />
        <div class="absolute inset-0 bg-linear-to-t from-black/80 via-black/55 to-black/10" />
      </div>

      <div class="relative z-10 w-full px-6 lg:px-16 pt-28 pb-16">
        <div class="max-w-6xl mx-auto">
          <p class="text-white/80 font-semibold tracking-widest uppercase text-sm">
            Visit Us
          </p>
          <h1 class="font-bebas text-6xl sm:text-7xl lg:text-8xl text-white leading-[0.9] mt-3">
            Creemos, Amamos
            <br />
            y Servimos.
          </h1>
          <p class="mt-4 text-white/80 text-lg sm:text-xl max-w-2xl">
            Llevamos su Luz a cada lugar.
          </p>
        </div>
      </div>
    </header>

    <MissionSection
      eyebrow="Misiones"
      title="Llevamos ayuda y esperanza a comunidades vulnerables."
      description="Tu aporte permite entregar mercados, acompañamiento y amor donde más se necesita."
      ctaText="Donar"
      ctaHref="/donation"
      sliderName="missions"
      slides={missionsSlides}
    />

    <MissionSection
      eyebrow="Ministerio EX"
      title="Juntos, cambiamos vidas: Acción Social en línea, uniendo corazones, transformando realidades."
      description="Con tu donación apoyamos procesos de restauración, alimentos y cuidado para quienes buscan un nuevo comienzo."
      ctaText="Donar"
      ctaHref="/donation"
      sliderName="ex"
      slides={exSlides}
    />
  </main>
</Layout>

