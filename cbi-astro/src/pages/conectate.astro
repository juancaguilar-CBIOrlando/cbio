---
import Layout from "../layouts/Layout.astro"
import { Image } from "astro:assets"
import { address, phone, email } from "../constants"
import FamiCafeSection from "../components/conectate/FamiCafeSection.astro"
import {
  ArrowRight,
  ArrowDown,
  Mail,
  Phone,
  MapPin,
  Users,
  Heart,
  Calendar,
  Youtube,
  Facebook,
  Instagram,
  ChevronRight,
  BookText,
  Sprout,
  Coffee,
} from "@lucide/astro"

// Import images
import dreamTeamWelcomeImg from "../assets/dreamTeam-welcome.jpg"
import alabanzaImg from "../assets/alabanza-danza.jpg"
import encuentrosImg from "../assets/encuentros.jpeg"
import parejasImg from "../assets/parejas.jpeg"
import bautizosImg from "../assets/bautizos3.jpeg"

// Google Maps URL
const mapsUrl = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(address)}`

// Ways to connect
const connectWays = [
  {
    icon: Coffee,
    title: "FamiCafé",
    description:
      "Nuestras clases de conexión donde descubres nuestros valores, encuentras tu propósito y te preparas para servir.",
    cta: "Conocer Más",
    link: "#famicafe",
    color: "amber",
  },
  {
    icon: Users,
    title: "Grupos de Conexión",
    description:
      "Encuentra comunidad en grupos pequeños donde puedes crecer espiritualmente y formar amistades genuinas.",
    cta: "Unirse a un Grupo",
    link: "#grupos",
    color: "primary",
  },
  {
    icon: Calendar,
    title: "Eventos Especiales",
    description:
      "Participa en nuestros eventos, retiros y actividades enfocadas para toda la familia.",
    cta: "Ver Eventos",
    link: "/eventos",
    color: "accent",
  },
  {
    icon: Heart,
    title: "Dream Team",
    description:
      "Sirve con tus dones y talentos únicos. Hay un lugar especial para ti en nuestro equipo.",
    cta: "Quiero Servir",
    link: "/dream-team",
    color: "primary",
  },
]

// Color classes for connect ways
const colorClasses: Record<
  string,
  { bg: string; text: string; hover: string }
> = {
  primary: {
    bg: "bg-primary/10",
    text: "text-primary",
    hover: "text-primary hover:text-primary/80",
  },
  accent: {
    bg: "bg-accent/10",
    text: "text-accent",
    hover: "text-accent hover:text-accent/80",
  },
  amber: {
    bg: "bg-amber-100",
    text: "text-amber-700",
    hover: "text-amber-700 hover:text-amber-600",
  },
}

// Social links
const socialLinks = [
  {
    name: "YouTube",
    icon: Youtube,
    url: "https://www.youtube.com/channel/UC5xttzojPMWk73I66cI6rhw",
    color: "hover:bg-red-600",
  },
  {
    name: "Facebook",
    icon: Facebook,
    url: "https://www.facebook.com/cbiorlando",
    color: "hover:bg-blue-600",
  },
  {
    name: "Instagram",
    icon: Instagram,
    url: "https://www.instagram.com/cbiorlando",
    color: "hover:bg-pink-600",
  },
]
---

<Layout title="Conéctate - CBI Orlando" navLogo="white">
  <!-- Hero Section -->
  <section class="relative h-[86vh] min-h-[600px] w-full overflow-hidden">
    <Image
      src={dreamTeamWelcomeImg}
      alt="Comunidad CBI Orlando"
      width={1920}
      height={1080}
      quality={90}
      class="absolute inset-0 w-full h-full object-cover"
      loading="eager"
    />
    <div
      class="absolute inset-0 bg-linear-to-b from-black/60 via-black/40 to-black/80">
    </div>

    <!-- Decorative elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div
        class="absolute -top-20 -left-40 sm:-left-30 w-64 h-64 bg-accent/10 sm:bg-transparent border border-white/15 rounded-full">
      </div>
      <div
        class="absolute -bottom-12 -right-60 sm:-right-40 sm:-bottom-40 w-72 h-72 sm:w-96 sm:h-96 bg-accent/20 sm:bg-transparent border border-white/40 rounded-full">
      </div>
      <div
        class="absolute top-1/3 right-1/4 w-48 h-48 bg-black/40 rounded-full blur-3xl">
      </div>
    </div>

    <div
      class="relative z-10 h-full flex flex-col items-center justify-center text-center px-6 pt-16">
      <span
        class="text-primary text-md sm:text-lg uppercase tracking-[0.2em] font-semibold mb-1 sm:mb-4 animate-fade-in">
        Eres Bienvenido
      </span>
      <h1
        class="font-bebas text-4xl sm:text-6xl md:text-7xl lg:text-8xl text-white mb-4 max-w-6xl leading-none animate-fade-in-up">
        Conectate con Nuestra <span class="text-primary">Iglesia</span>
      </h1>

      <p
        class="text-white/80 text-lg md:text-xl max-w-2xl mx-auto mb-8 animate-fade-in-up"
        style="animation-delay: 0.2s;">
        No fuiste creado para caminar solo. <span class="hidden sm:inline">
          Conéctate con una comunidad que te acompaña, te inspira y crezca
          contigo.
        </span>
      </p>

      <!-- Trust Badges -->
      <div
        class="hidden sm:flex flex-wrap justify-center gap-4 mb-10 animate-fade-in-up"
        style="animation-delay: 0.35s;">
        <div
          class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full">
          <Heart class="w-5 h-5 text-primary" />
          <span class="text-white text-sm">Comunidad Auténtica</span>
        </div>
        <div
          class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full">
          <Users class="w-5 h-5 text-primary" />
          <span class="text-white text-sm">Grupos para Todos</span>
        </div>
        <div
          class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full">
          <Sprout class="w-5 h-5 text-primary" />
          <span class="text-white text-sm">Crece en tu Fe</span>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div
        class="flex flex-col sm:flex-row gap-4 animate-fade-in-up"
        style="animation-delay: 0.45s;">
        <a
          href="#formas-de-conectar"
          class="inline-flex items-center justify-center gap-2 bg-primary text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-primary/90 transition-all duration-300 hover:scale-105 group">
          Quiero Conectarme
          <ArrowRight
            class="w-5 h-5 transform group-hover:translate-x-1 transition-transform"
          />
        </a>
        <a
          href="/visitanos"
          class="inline-flex items-center justify-center px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/30 text-white font-semibold rounded-full hover:bg-white hover:text-accent transition-all duration-300">
          Planea tu Visita
        </a>
      </div>

      <!-- Scroll indicator -->
      <div
        class="hidden sm:block absolute bottom-10 left-1/2 -translate-x-1/2 animate-fade-in-up"
        style="animation-delay: 0.6s;">
        <a
          href="#por-que-conectar"
          class="inline-flex flex-col items-center justify-center gap-2 text-white/60 hover:text-primary transition-colors duration-300">
          <span class="text-xs uppercase tracking-widest">Descubre más</span>
          <ArrowDown class="w-5 h-5 animate-bounce" />
        </a>
      </div>
    </div>
  </section>

  <!-- Marquee Section -->
  <section class="bg-primary py-4 overflow-hidden">
    <div class="marquee-container">
      <div class="marquee-content">
        {
          Array(8)
            .fill(null)
            .map(() => (
              <span class="marquee-item text-white font-bold text-lg uppercase tracking-wider">
                SE PARTE DE NUESTRA COMUNIDAD
                <span class="mx-6 text-white/50">✦</span>
              </span>
            ))
        }
      </div>
    </div>
  </section>

  <main class="bg-white">
    <!-- Why Connect Section -->
    <section id="por-que-conectar" class="py-24 lg:py-32 px-6 lg:px-16">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <!-- Text Content -->
          <div>
            <span
              class="inline-block bg-primary/10 text-primary px-4 py-1 rounded-full text-sm font-semibold mb-6">
              ¿POR QUÉ CONECTAR?
            </span>
            <h2
              class="font-bebas text-4xl sm:text-5xl lg:text-6xl text-accent mb-6 leading-none">
              La Fe Crece en <span class="text-primary">Comunidad</span>
            </h2>
            <p class="text-gray-600 text-lg leading-relaxed mb-6">
              La Biblia nos enseña que no fuimos diseñados para vivir solos.
              Cuando nos conectamos con otros creyentes, experimentamos el amor
              de Dios de una manera más profunda.
            </p>
            <ul class="space-y-4 mb-8">
              <li class="flex items-start gap-3">
                <div
                  class="w-6 h-6 rounded-full bg-primary/10 flex items-center justify-center shrink-0 mt-0.5">
                  <ChevronRight class="w-4 h-4 text-primary" />
                </div>
                <span class="text-gray-700"
                  ><strong class="text-accent">Apoyo mutuo</strong> en los momentos
                  difíciles y celebración en las victorias.</span
                >
              </li>
              <li class="flex items-start gap-3">
                <div
                  class="w-6 h-6 rounded-full bg-primary/10 flex items-center justify-center shrink-0 mt-0.5">
                  <ChevronRight class="w-4 h-4 text-primary" />
                </div>
                <span class="text-gray-700"
                  ><strong class="text-accent">Crecimiento espiritual</strong> a través
                  del estudio bíblico y la oración.</span
                >
              </li>
              <li class="flex items-start gap-3">
                <div
                  class="w-6 h-6 rounded-full bg-primary/10 flex items-center justify-center shrink-0 mt-0.5">
                  <ChevronRight class="w-4 h-4 text-primary" />
                </div>
                <span class="text-gray-700"
                  ><strong class="text-accent">Amistades genuinas</strong> que duran
                  toda la vida.</span
                >
              </li>
            </ul>
            <blockquote
              class="border-l-4 border-primary pl-4 italic text-gray-600">
              "Y considerémonos unos a otros para estimularnos al amor y a las
              buenas obras"
              <cite class="block text-primary font-semibold not-italic mt-2"
                >— Hebreos 10:24</cite
              >
            </blockquote>
          </div>

          <!-- Image Grid -->
          <div class="relative">
            <div class="grid grid-cols-2 gap-4">
              <div class="space-y-4">
                <Image
                  src={alabanzaImg}
                  alt="Alabanza en CBI Orlando"
                  width={400}
                  height={500}
                  quality={85}
                  class="rounded-2xl w-full h-48 object-cover shadow-lg"
                />
                <Image
                  src={bautizosImg}
                  alt="Bautizos en CBI Orlando"
                  width={400}
                  height={300}
                  quality={85}
                  class="rounded-2xl w-full h-64 object-cover shadow-lg"
                />
              </div>
              <div class="space-y-4 pt-8">
                <Image
                  src={encuentrosImg}
                  alt="Encuentros CBI Orlando"
                  width={400}
                  height={400}
                  quality={85}
                  class="rounded-2xl w-full h-64 object-cover shadow-lg"
                />
                <Image
                  src={parejasImg}
                  alt="Parejas CBI Orlando"
                  width={400}
                  height={300}
                  quality={85}
                  class="rounded-2xl w-full h-48 object-cover shadow-lg"
                />
              </div>
            </div>
            <!-- Decorative element -->
            <div
              class="absolute -bottom-6 -left-6 w-24 h-24 bg-primary/10 rounded-full blur-2xl">
            </div>
            <div
              class="absolute -top-6 -right-6 w-32 h-32 bg-accent/10 rounded-full blur-2xl">
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Ways to Connect Section -->
    <section
      id="formas-de-conectar"
      class="py-24 lg:py-32 px-6 lg:px-16 bg-slate-50">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <span
            class="inline-block bg-accent/10 text-accent px-4 py-1 rounded-full text-sm font-semibold mb-4">
            FORMAS DE CONECTAR
          </span>
          <h2
            class="font-bebas text-4xl sm:text-5xl lg:text-6xl text-accent mb-4">
            Hay Un Lugar Para <span class="text-primary">Ti</span>
          </h2>
          <p class="text-gray-600 text-lg max-w-2xl mx-auto">
            No importa en qué etapa de la vida te encuentres, tenemos
            oportunidades para que te conectes y crezcas.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {
            connectWays.map((way, index) => {
              const colors = colorClasses[way.color] || colorClasses.primary
              return (
                <div
                  class="connect-card bg-white rounded-3xl p-8 shadow-sm hover:shadow-xl transition-all duration-500 group relative overflow-hidden"
                  style={`animation-delay: ${index * 0.1}s;`}>
                  <div
                    class={`absolute top-0 right-0 w-32 h-32 ${colors.bg} rounded-full -translate-y-1/2 translate-x-1/2 group-hover:scale-150 transition-transform duration-500`}
                  />
                  <div class="relative z-10">
                    <div
                      class={`w-16 h-16 rounded-2xl flex items-center justify-center mb-6 ${colors.bg}`}>
                      <way.icon class={`w-8 h-8 ${colors.text}`} />
                    </div>
                    <h3 class="text-2xl font-bold text-accent mb-3 font-bebas">
                      {way.title}
                    </h3>
                    <p class="text-gray-600 mb-6 leading-relaxed text-sm">
                      {way.description}
                    </p>
                    <a
                      href={way.link}
                      class={`inline-flex items-center gap-2 font-semibold transition-all duration-300 group/link ${colors.hover}`}>
                      {way.cta}
                      <ArrowRight class="w-4 h-4 transform group-hover/link:translate-x-1 transition-transform" />
                    </a>
                  </div>
                </div>
              )
            })
          }
        </div>
      </div>
    </section>

    <!-- Connection Groups Experience Section -->
    <section
      id="grupos"
      class="py-12 lg:py-16 px-6 lg:px-16 bg-accent relative overflow-hidden">
      <div class="max-w-7xl mx-auto relative z-10">
        <!-- Header -->
        <div class="text-center mb-16 lg:mb-20">
          <span
            class="inline-block bg-primary/20 text-primary px-4 py-1 rounded-full text-sm font-semibold mb-4">
            GRUPOS DE CONEXIÓN
          </span>
          <h2
            class="font-bebas text-4xl sm:text-5xl lg:text-6xl text-white mb-6">
            Más Que Un Grupo, <span class="text-primary">Una Familia</span>
          </h2>
          <p class="text-white/70 text-lg max-w-3xl mx-auto leading-relaxed">
            En nuestros grupos de conexión no solo estudiamos la Biblia,
            construimos relaciones genuinas, nos apoyamos mutuamente y crecemos
            juntos en un ambiente de amor y confianza.
          </p>
        </div>

        <!-- Three Pillars Grid -->
        <div class="grid md:grid-cols-3 gap-6 lg:gap-8 mb-16">
          <!-- Discipulado -->
          <div
            class="experience-card group relative bg-linear-to-br from-white/10 to-white/5 backdrop-blur-sm rounded-3xl p-8 lg:p-10 border border-white/10 hover:border-primary/40 transition-all duration-500"
            style="animation-delay: 0s;">
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-primary/10 rounded-full -translate-y-1/2 translate-x-1/2 blur-2xl group-hover:bg-primary/20 transition-all duration-500">
            </div>
            <div class="relative z-10">
              <div class="flex items-center gap-4 mb-6">
                <BookText class="w-10 h-10 text-primary" />
                <h3
                  class="text-3xl font-bold text-white font-bebas tracking-wide">
                  Discipulado
                </h3>
              </div>

              <p class="text-white/70 leading-relaxed text-lg">
                Crecimiento constante en un ambiente familiar. Estudia la
                Palabra, haz preguntas y fortalece tu fe rodeado de personas que
                caminan contigo.
              </p>
            </div>
          </div>

          <!-- Comunidad -->
          <div
            class="experience-card group relative bg-linear-to-br from-white/10 to-white/5 backdrop-blur-sm rounded-3xl p-8 lg:p-10 border border-white/10 hover:border-primary/40 transition-all duration-500"
            style="animation-delay: 0.15s;">
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-primary/10 rounded-full -translate-y-1/2 translate-x-1/2 blur-2xl group-hover:bg-primary/20 transition-all duration-500">
            </div>
            <div class="relative z-10">
              <div class="flex items-center gap-4 mb-6">
                <Heart class="w-10 h-10 text-primary" />
                <h3
                  class="text-3xl font-bold text-white font-bebas tracking-wide">
                  Comunidad
                </h3>
              </div>
              <p class="text-white/70 leading-relaxed text-lg">
                Relaciones auténticas que trascienden el domingo. Encuentra
                amigos que celebran tus victorias, te sostienen en las pruebas y
                se convierten en familia.
              </p>
            </div>
          </div>

          <!-- Crecimiento -->
          <div
            class="experience-card group relative bg-linear-to-br from-white/10 to-white/5 backdrop-blur-sm rounded-3xl p-8 lg:p-10 border border-white/10 hover:border-primary/40 transition-all duration-500"
            style="animation-delay: 0.3s;">
            <div
              class="absolute top-0 right-0 w-32 h-32 bg-primary/10 rounded-full -translate-y-1/2 translate-x-1/2 blur-2xl group-hover:bg-primary/20 transition-all duration-500">
            </div>
            <div class="relative z-10">
              <div class="flex items-center gap-4 mb-6">
                <Sprout class="w-10 h-10 text-primary" />
                <h3
                  class="text-3xl font-bold text-white font-bebas tracking-wide">
                  Crecimiento
                </h3>
              </div>
              <p class="text-white/70 leading-relaxed text-lg">
                Transformación real en cada área de tu vida. Descubre tus dones,
                desarrolla tu propósito y conviértete en la mejor versión de ti
                mismo en Cristo.
              </p>
            </div>
          </div>
        </div>

        <div
          class="flex flex-wrap justify-center gap-8 lg:gap-16 mb-16 py-8 border-y border-white/10">
          <div class="text-center">
            <div class="text-4xl lg:text-5xl font-bebas text-primary mb-1">
              10+
            </div>
            <div class="text-white/60 text-sm uppercase tracking-wider">
              Grupos Activos
            </div>
          </div>
          <div class="text-center">
            <div class="text-4xl lg:text-5xl font-bebas text-primary mb-1">
              200<span class="text-2xl uppercase">s</span>
            </div>
            <div class="text-white/60 text-sm uppercase tracking-wider">
              Vidas Transformadas
            </div>
          </div>
        </div>

        <!-- CTA -->
        <div class="text-center">
          <p class="text-white/70 text-lg mb-6 max-w-xl mx-auto">
            Hay un lugar perfecto esperándote.
          </p>
          <a
            href="#contacto"
            class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-primary/90 transition-all duration-300 hover:scale-105 group">
            Encuentra Tu Grupo
            <ArrowRight
              class="w-5 h-5 transform group-hover:translate-x-1 transition-transform"
            />
          </a>
        </div>
      </div>
    </section>

    <!-- FamiCafe Section -->
    <FamiCafeSection />

    <!-- Visit Us CTA Section -->
    <section class="relative overflow-hidden">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 min-h-[500px] lg:min-h-[550px]">
          <!-- Image Side -->
          <div class="relative h-64 lg:h-auto lg:order-2">
            <Image
              src={alabanzaImg}
              alt="Servicio de adoración en CBI Orlando"
              width={900}
              height={700}
              quality={90}
              class="absolute inset-0 w-full h-full object-cover"
            />
            <div
              class="absolute inset-0 bg-linear-to-t from-accent/90 via-accent/40 to-transparent lg:bg-linear-to-r lg:from-accent lg:via-accent/30 lg:to-transparent">
            </div>
          </div>

          <!-- Content Side -->
          <div
            class="relative z-10 flex flex-col justify-center bg-accent px-8 lg:px-16 py-16 lg:py-20">
            <span
              class="text-primary text-sm uppercase tracking-[0.2em] font-semibold mb-4">
              Visítanos Este Domingo
            </span>
            <h2
              class="font-bebas text-4xl sm:text-5xl lg:text-6xl text-white leading-none mb-6">
              Tu Silla Está<br />
              <span class="text-primary">Reservada</span>
            </h2>
            <p class="text-white/80 text-lg leading-relaxed mb-8 max-w-lg">
              Cada domingo es una oportunidad para experimentar la presencia de
              Dios, adorar en comunidad y recibir una palabra que transformará
              tu semana. Te esperamos con los brazos abiertos.
            </p>

            <!-- Quick Info Pills -->
            <div class="flex flex-wrap gap-3 mb-8">
              <div
                class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full">
                <Calendar class="w-4 h-4 text-primary" />
                <span class="text-white text-sm font-medium">Domingos</span>
              </div>
              <div
                class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full">
                <span class="text-white text-sm font-medium"
                  >9:30 AM & 11:30 AM</span
                >
              </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="/visitanos"
                class="inline-flex items-center justify-center gap-2 bg-primary text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-primary/90 transition-all duration-300 hover:scale-105 group">
                Planea Tu Visita
                <ArrowRight
                  class="w-5 h-5 transform group-hover:translate-x-1 transition-transform"
                />
              </a>
              <a
                href={mapsUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center gap-2 bg-white/10 backdrop-blur-sm border border-white/20 text-white px-6 py-4 rounded-full font-semibold hover:bg-white/20 transition-all duration-300">
                <MapPin class="w-5 h-5" />
                <span>Cómo Llegar</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contacto" class="py-24 lg:py-32 px-6 lg:px-16 bg-slate-50">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
          <!-- Contact Info -->
          <div>
            <span
              class="inline-block bg-accent/10 text-accent px-4 py-1 rounded-full text-sm font-semibold mb-6">
              CONTÁCTANOS
            </span>
            <h2
              class="font-bebas text-4xl sm:text-5xl lg:text-6xl text-accent mb-6 leading-none">
              Estamos Aquí <span class="text-primary">Para Ti</span>
            </h2>
            <p class="text-gray-600 text-lg leading-relaxed mb-8">
