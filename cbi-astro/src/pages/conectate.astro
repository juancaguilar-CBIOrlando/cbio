---
import Layout from "../layouts/Layout.astro"
import { Image } from "astro:assets"
import { address, phone, email, serviceTimes } from "../constants"
import {
  ArrowRight,
  ArrowDown,
  Mail,
  Phone,
  MapPin,
  Users,
  Heart,
  Sparkles,
  Calendar,
  Youtube,
  Facebook,
  Instagram,
  Clock,
  ChevronRight,
} from "@lucide/astro"

// Import images
import dreamTeamWelcomeImg from "../assets/dreamTeam-welcome.jpg"
import alabanzaImg from "../assets/alabanza-danza.jpg"
import encuentrosImg from "../assets/encuentros.jpeg"
import parejasImg from "../assets/parejas.jpeg"
import mujeresImg from "../assets/mujeres.jpg"
import bautizosImg from "../assets/bautizos3.jpeg"

// Google Maps URL
const mapsUrl = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(address)}`

// Ways to connect
const connectWays = [
  {
    icon: Users,
    title: "Grupos de Conexión",
    description:
      "Encuentra comunidad en grupos pequeños donde puedes crecer espiritualmente y formar amistades genuinas.",
    cta: "Unirse a un Grupo",
    link: "#grupos",
    color: "primary",
  },
  {
    icon: Calendar,
    title: "Eventos Especiales",
    description:
      "Participa en nuestros eventos, retiros y actividades diseñadas para toda la familia.",
    cta: "Ver Eventos",
    link: "/eventos",
    color: "accent",
  },
  {
    icon: Heart,
    title: "Dream Team",
    description:
      "Sirve con tus dones y talentos únicos. Hay un lugar especial para ti en nuestro equipo.",
    cta: "Quiero Servir",
    link: "/dream-team",
    color: "primary",
  },
]

// Community groups
const communityGroups = [
  {
    name: "Parejas",
    image: parejasImg,
    description: "Fortalece tu matrimonio junto a otras parejas",
    day: "Viernes",
    time: "7:30 PM",
  },
  {
    name: "Mujeres",
    image: mujeresImg,
    description: "Un espacio para crecer y conectar entre mujeres",
    day: "Sábados",
    time: "10:00 AM",
  },
  {
    name: "Encuentros",
    image: encuentrosImg,
    description: "Retiros transformadores para una vida plena",
    day: "Mensual",
    time: "Consultar",
  },
]

// Social links
const socialLinks = [
  {
    name: "YouTube",
    icon: Youtube,
    url: "https://www.youtube.com/channel/UC5xttzojPMWk73I66cI6rhw",
    color: "hover:bg-red-600",
  },
  {
    name: "Facebook",
    icon: Facebook,
    url: "https://www.facebook.com/cbiorlando",
    color: "hover:bg-blue-600",
  },
  {
    name: "Instagram",
    icon: Instagram,
    url: "https://www.instagram.com/cbiorlando",
    color: "hover:bg-pink-600",
  },
]
---

<Layout title="Conéctate - CBI Orlando" navLogo="white">
  <!-- Hero Section -->
  <section class="relative h-[85vh] min-h-[600px] w-full overflow-hidden">
    <Image
      src={dreamTeamWelcomeImg}
      alt="Comunidad CBI Orlando"
      width={1920}
      height={1080}
      quality={90}
      class="absolute inset-0 w-full h-full object-cover"
      loading="eager"
    />
    <div
      class="absolute inset-0 bg-linear-to-b from-black/60 via-black/40 to-black/80">
    </div>

    <!-- Decorative elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div
        class="absolute -top-20 -left-40 sm:-left-30 w-64 h-64 bg-accent/10 sm:bg-transparent border border-white/15 rounded-full">
      </div>
      <div
        class="absolute -bottom-12 -right-60 sm:-right-40 sm:-bottom-40 w-72 h-72 sm:w-96 sm:h-96 bg-accent/20 sm:bg-transparent border border-white/40 rounded-full">
      </div>
      <div
        class="absolute top-1/3 right-1/4 w-48 h-48 bg-black/40 rounded-full blur-3xl">
      </div>
    </div>

    <div
      class="relative z-10 h-full flex flex-col items-center justify-center text-center px-6 pt-16">
      <span
        class="text-primary text-sm sm:text-base uppercase tracking-[0.3em] font-semibold mb-2 sm:mb-4 animate-fade-in">
        Bienvenido a Casa
      </span>
      <h1
        class="font-bebas text-5xl sm:text-6xl md:text-7xl lg:text-8xl text-white mb-4 max-w-5xl leading-none animate-fade-in-up">
        Tu Lugar en Nuestra <span class="text-primary">Familia</span>
      </h1>

      <p
        class="text-white/80 text-lg md:text-xl max-w-2xl mx-auto mb-8 animate-fade-in-up"
        style="animation-delay: 0.2s;">
        No fuiste creado para caminar solo. Conéctate con una comunidad que te
        acompaña, te inspira y crece contigo.
      </p>

      <!-- Trust Badges -->
      <div
        class="hidden sm:flex flex-wrap justify-center gap-4 mb-10 animate-fade-in-up"
        style="animation-delay: 0.35s;">
        <div
          class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full">
          <Heart class="w-5 h-5 text-primary" />
          <span class="text-white text-sm">Comunidad Auténtica</span>
        </div>
        <div
          class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full">
          <Users class="w-5 h-5 text-primary" />
          <span class="text-white text-sm">Grupos para Todos</span>
        </div>
        <div
          class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-full">
          <Sparkles class="w-5 h-5 text-primary" />
          <span class="text-white text-sm">Crece en tu Fe</span>
        </div>
      </div>

      <!-- CTA Buttons -->
      <div
        class="flex flex-col sm:flex-row gap-4 animate-fade-in-up"
        style="animation-delay: 0.45s;">
        <a
          href="#formas-de-conectar"
          class="inline-flex items-center justify-center gap-2 bg-primary text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-primary/90 transition-all duration-300 hover:scale-105 group">
          Quiero Conectarme
          <ArrowRight
            class="w-5 h-5 transform group-hover:translate-x-1 transition-transform"
          />
        </a>
        <a
          href="/visitanos"
          class="inline-flex items-center justify-center px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/30 text-white font-semibold rounded-full hover:bg-white hover:text-accent transition-all duration-300">
          Planea tu Visita
        </a>
      </div>

      <!-- Scroll indicator -->
      <div
        class="hidden sm:block absolute bottom-10 left-1/2 -translate-x-1/2 animate-fade-in-up"
        style="animation-delay: 0.6s;">
        <a
          href="#por-que-conectar"
          class="inline-flex flex-col items-center justify-center gap-2 text-white/60 hover:text-primary transition-colors duration-300">
          <span class="text-xs uppercase tracking-widest">Descubre más</span>
          <ArrowDown class="w-5 h-5 animate-bounce" />
        </a>
      </div>
    </div>
  </section>

  <!-- Marquee Section -->
  <section class="bg-primary py-4 overflow-hidden">
    <div class="marquee-container">
      <div class="marquee-content">
        {
          Array(8)
            .fill(null)
            .map(() => (
              <span class="marquee-item text-white font-bold text-lg uppercase tracking-wider">
                FUISTE CREADO PARA COMUNIDAD
                <span class="mx-6 text-white/50">✦</span>
              </span>
            ))
        }
      </div>
    </div>
  </section>

  <main class="bg-white">
    <!-- Why Connect Section -->
    <section id="por-que-conectar" class="py-24 lg:py-32 px-6 lg:px-16">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
          <!-- Text Content -->
          <div>
            <span
              class="inline-block bg-primary/10 text-primary px-4 py-1 rounded-full text-sm font-semibold mb-6">
              ¿POR QUÉ CONECTAR?
            </span>
            <h2
              class="font-bebas text-4xl sm:text-5xl lg:text-6xl text-accent mb-6 leading-none">
              La Fe Crece en <span class="text-primary">Comunidad</span>
            </h2>
            <p class="text-gray-600 text-lg leading-relaxed mb-6">
              La Biblia nos enseña que no fuimos diseñados para vivir solos.
              Cuando nos conectamos con otros creyentes, experimentamos el amor
              de Dios de una manera más profunda.
            </p>
            <ul class="space-y-4 mb-8">
              <li class="flex items-start gap-3">
                <div
                  class="w-6 h-6 rounded-full bg-primary/10 flex items-center justify-center shrink-0 mt-0.5">
                  <ChevronRight class="w-4 h-4 text-primary" />
                </div>
                <span class="text-gray-700"
                  ><strong class="text-accent">Apoyo mutuo</strong> en los momentos
                  difíciles y celebración en las victorias.</span
                >
              </li>
              <li class="flex items-start gap-3">
                <div
                  class="w-6 h-6 rounded-full bg-primary/10 flex items-center justify-center shrink-0 mt-0.5">
                  <ChevronRight class="w-4 h-4 text-primary" />
                </div>
                <span class="text-gray-700"
                  ><strong class="text-accent">Crecimiento espiritual</strong> a través
                  del estudio bíblico y la oración.</span
                >
              </li>
              <li class="flex items-start gap-3">
                <div
                  class="w-6 h-6 rounded-full bg-primary/10 flex items-center justify-center shrink-0 mt-0.5">
                  <ChevronRight class="w-4 h-4 text-primary" />
                </div>
                <span class="text-gray-700"
                  ><strong class="text-accent">Amistades genuinas</strong> que duran
                  toda la vida.</span
                >
              </li>
            </ul>
            <blockquote
              class="border-l-4 border-primary pl-4 italic text-gray-600">
              "Y considerémonos unos a otros para estimularnos al amor y a las
              buenas obras"
              <cite class="block text-primary font-semibold not-italic mt-2"
                >— Hebreos 10:24</cite
              >
            </blockquote>
          </div>

          <!-- Image Grid -->
          <div class="relative">
            <div class="grid grid-cols-2 gap-4">
              <div class="space-y-4">
                <Image
                  src={alabanzaImg}
                  alt="Alabanza en CBI Orlando"
                  width={400}
                  height={500}
                  quality={85}
                  class="rounded-2xl w-full h-48 object-cover shadow-lg"
                />
                <Image
                  src={bautizosImg}
                  alt="Bautizos en CBI Orlando"
                  width={400}
                  height={300}
                  quality={85}
                  class="rounded-2xl w-full h-64 object-cover shadow-lg"
                />
              </div>
              <div class="space-y-4 pt-8">
                <Image
                  src={encuentrosImg}
                  alt="Encuentros CBI Orlando"
                  width={400}
                  height={400}
                  quality={85}
                  class="rounded-2xl w-full h-64 object-cover shadow-lg"
                />
                <Image
                  src={parejasImg}
                  alt="Parejas CBI Orlando"
                  width={400}
                  height={300}
                  quality={85}
                  class="rounded-2xl w-full h-48 object-cover shadow-lg"
                />
              </div>
            </div>
            <!-- Decorative element -->
            <div
              class="absolute -bottom-6 -left-6 w-24 h-24 bg-primary/10 rounded-full blur-2xl">
            </div>
            <div
              class="absolute -top-6 -right-6 w-32 h-32 bg-accent/10 rounded-full blur-2xl">
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Ways to Connect Section -->
    <section
      id="formas-de-conectar"
      class="py-24 lg:py-32 px-6 lg:px-16 bg-slate-50">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <span
            class="inline-block bg-accent/10 text-accent px-4 py-1 rounded-full text-sm font-semibold mb-4">
            FORMAS DE CONECTAR
          </span>
          <h2
            class="font-bebas text-4xl sm:text-5xl lg:text-6xl text-accent mb-4">
            Hay Un Lugar Para <span class="text-primary">Ti</span>
          </h2>
          <p class="text-gray-600 text-lg max-w-2xl mx-auto">
            No importa en qué etapa de la vida te encuentres, tenemos
            oportunidades para que te conectes y crezcas.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {
            connectWays.map((way, index) => (
              <div
                class="connect-card bg-white rounded-3xl p-8 shadow-sm hover:shadow-xl transition-all duration-500 group relative overflow-hidden"
                style={`animation-delay: ${index * 0.1}s;`}>
                <div class="absolute top-0 right-0 w-32 h-32 bg-primary/5 rounded-full -translate-y-1/2 translate-x-1/2 group-hover:scale-150 transition-transform duration-500" />
                <div class="relative z-10">
                  <div
                    class={`w-16 h-16 rounded-2xl flex items-center justify-center mb-6 ${way.color === "primary" ? "bg-primary/10" : "bg-accent/10"}`}>
                    <way.icon
                      class={`w-8 h-8 ${way.color === "primary" ? "text-primary" : "text-accent"}`}
                    />
                  </div>
                  <h3 class="text-2xl font-bold text-accent mb-3 font-bebas">
                    {way.title}
                  </h3>
                  <p class="text-gray-600 mb-6 leading-relaxed">
                    {way.description}
                  </p>
                  <a
                    href={way.link}
                    class={`inline-flex items-center gap-2 font-semibold transition-all duration-300 group/link ${way.color === "primary" ? "text-primary hover:text-primary/80" : "text-accent hover:text-accent/80"}`}>
                    {way.cta}
                    <ArrowRight class="w-4 h-4 transform group-hover/link:translate-x-1 transition-transform" />
                  </a>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Community Groups Section -->

    <!-- TODO: CHANGE TO SHOWCASE WHAT HAPPENS IN OUR CONNECTION GROUPS INSTEAD...USE THE PICTURE OF THE MAP WITH ALL THE GROUPS TO SHOW ALL OUR GROUPS EASILY. -->
    <section
      id="grupos"
      class="py-24 lg:py-32 px-6 lg:px-16 bg-accent relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div
          class="absolute top-10 left-10 w-64 h-64 border border-white/20 rounded-full">
        </div>
        <div
          class="absolute bottom-10 right-10 w-96 h-96 border border-white/20 rounded-full">
        </div>
      </div>

      <div class="max-w-7xl mx-auto relative z-10">
        <div class="text-center mb-16">
          <span
            class="inline-block bg-primary/20 text-primary px-4 py-1 rounded-full text-sm font-semibold mb-4">
            GRUPOS DE CONEXIÓN
          </span>
          <h2
            class="font-bebas text-4xl sm:text-5xl lg:text-6xl text-white mb-4">
            Encuentra Tu <span class="text-primary">Comunidad</span>
          </h2>
          <p class="text-white/70 text-lg max-w-2xl mx-auto">
            Grupos diseñados para diferentes etapas y necesidades de la vida.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {
            communityGroups.map((group, index) => (
              <div
                class="group-card bg-white/5 backdrop-blur-sm rounded-3xl overflow-hidden border border-white/10 hover:border-primary/50 transition-all duration-500 group"
                style={`animation-delay: ${index * 0.15}s;`}>
                <div class="relative h-56 overflow-hidden">
                  <Image
                    src={group.image}
                    alt={group.name}
                    width={500}
                    height={300}
                    quality={85}
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
                  />
                  <div class="absolute inset-0 bg-linear-to-t from-accent via-transparent to-transparent" />
                </div>
                <div class="p-6">
                  <h3 class="text-2xl font-bold text-white mb-2 font-bebas">
                    {group.name}
                  </h3>
                  <p class="text-white/70 mb-4">{group.description}</p>
                  <div class="flex items-center gap-4 text-sm">
                    <div class="flex items-center gap-2 text-primary">
                      <Calendar class="w-4 h-4" />
                      <span>{group.day}</span>
                    </div>
                    <div class="flex items-center gap-2 text-white/60">
                      <Clock class="w-4 h-4" />
                      <span>{group.time}</span>
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>

        <div class="text-center mt-12">
          <a
            href="#contacto"
            class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-primary/90 transition-all duration-300 hover:scale-105 group">
            Inscríbete en un Grupo
            <ArrowRight
              class="w-5 h-5 transform group-hover:translate-x-1 transition-transform"
            />
          </a>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-24 lg:py-32 px-6 lg:px-16">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
          <span
            class="inline-block bg-primary/10 text-primary px-4 py-1 rounded-full text-sm font-semibold mb-4">
            NUESTROS SERVICIOS
          </span>
          <h2
            class="font-bebas text-4xl sm:text-5xl lg:text-6xl text-accent mb-4">
            Te Esperamos <span class="text-primary">Cada Semana</span>
          </h2>
          <p class="text-gray-600 text-lg max-w-2xl mx-auto">
            Tenemos un espacio para ti y tu familia en cada uno de nuestros
            servicios.
          </p>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {
            serviceTimes.map((service, index) => (
              <div
                class="service-card bg-white rounded-2xl p-6 shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100 hover:border-primary/30 group"
                style={`animation-delay: ${index * 0.1}s;`}>
                <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center mb-4 group-hover:bg-primary group-hover:scale-110 transition-all duration-300">
                  <Calendar class="w-6 h-6 text-primary group-hover:text-white transition-colors" />
                </div>
                <h3 class="text-xl font-bold text-accent mb-2">
                  {service.name}
                </h3>
                <p class="text-primary font-semibold mb-1">{service.day}</p>
                <p class="text-gray-600 text-sm">{service.times.join(" & ")}</p>
                {service.link && (
                  <a
                    href={service.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 text-sm text-primary mt-3 hover:underline">
                    Ver en línea
                    <ArrowRight class="w-3 h-3" />
                  </a>
                )}
              </div>
            ))
          }
        </div>

        <div class="text-center mt-12">
          <a
            href="/visitanos"
            class="inline-flex items-center gap-2 bg-accent text-white px-8 py-4 rounded-full font-semibold text-lg hover:bg-accent/90 transition-all duration-300 hover:scale-105 group">
            Planea tu Primera Visita
            <ArrowRight
              class="w-5 h-5 transform group-hover:translate-x-1 transition-transform"
            />
          </a>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contacto" class="py-24 lg:py-32 px-6 lg:px-16 bg-slate-50">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-20">
          <!-- Contact Info -->
          <div>
            <span
              class="inline-block bg-accent/10 text-accent px-4 py-1 rounded-full text-sm font-semibold mb-6">
              CONTÁCTANOS
            </span>
            <h2
              class="font-bebas text-4xl sm:text-5xl lg:text-6xl text-accent mb-6 leading-none">
              Estamos Aquí <span class="text-primary">Para Ti</span>
            </h2>
            <p class="text-gray-600 text-lg leading-relaxed mb-8">
              ¿Tienes preguntas? ¿Quieres saber más sobre nuestros grupos o
              servicios? No dudes en contactarnos. Nos encantaría conocerte.
            </p>

            <div class="space-y-6">
              <a
                href={mapsUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-start gap-4 group">
                <div
                  class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center shrink-0 group-hover:bg-primary transition-colors duration-300">
                  <MapPin
                    class="w-6 h-6 text-primary group-hover:text-white transition-colors"
                  />
                </div>
                <div>
                  <h4 class="font-semibold text-accent mb-1">Dirección</h4>
                  <p
                    class="text-gray-600 group-hover:text-primary transition-colors">
                    {address}
                  </p>
                </div>
              </a>

              <a
                href={`tel:${phone.replace(/[^0-9]/g, "")}`}
                class="flex items-start gap-4 group">
                <div
                  class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center shrink-0 group-hover:bg-primary transition-colors duration-300">
                  <Phone
                    class="w-6 h-6 text-primary group-hover:text-white transition-colors"
                  />
                </div>
                <div>
                  <h4 class="font-semibold text-accent mb-1">Teléfono</h4>
                  <p
                    class="text-gray-600 group-hover:text-primary transition-colors">
                    {phone}
                  </p>
                </div>
              </a>

              <a href={`mailto:${email}`} class="flex items-start gap-4 group">
                <div
                  class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center shrink-0 group-hover:bg-primary transition-colors duration-300">
                  <Mail
                    class="w-6 h-6 text-primary group-hover:text-white transition-colors"
                  />
                </div>
                <div>
                  <h4 class="font-semibold text-accent mb-1">Email</h4>
                  <p
                    class="text-gray-600 group-hover:text-primary transition-colors">
                    {email}
                  </p>
                </div>
              </a>
            </div>

            <!-- Social Links -->
            <div class="mt-10">
              <h4 class="font-semibold text-accent mb-4">Síguenos en Redes</h4>
              <div class="flex gap-3">
                {
                  socialLinks.map((social) => (
                    <a
                      href={social.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class={`w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center text-accent transition-all duration-300 ${social.color} hover:text-white hover:scale-110`}
                      aria-label={social.name}>
                      <social.icon class="w-5 h-5" />
                    </a>
                  ))
                }
              </div>
            </div>
          </div>

          <!-- New Visitor Card -->
          <div class="relative">
            <div
              class="bg-white rounded-3xl p-8 lg:p-10 shadow-xl border border-gray-100 relative overflow-hidden">
              <div
                class="absolute top-0 right-0 w-40 h-40 bg-primary/5 rounded-full -translate-y-1/2 translate-x-1/2">
              </div>
              <div class="relative z-10">
                <div
                  class="w-16 h-16 rounded-2xl bg-primary/10 flex items-center justify-center mb-6">
                  <Sparkles class="w-8 h-8 text-primary" />
                </div>
                <h3 class="font-bebas text-3xl lg:text-4xl text-accent mb-4">
