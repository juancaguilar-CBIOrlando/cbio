    <section
      class="py-24 lg:py-32 bg-linear-to-br from-primary via-primary to-accent relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <svg
          class="w-full h-full"
          viewBox="0 0 100 100"
          preserveAspectRatio="none">
          <pattern
            id="grid"
            width="10"
            height="10"
