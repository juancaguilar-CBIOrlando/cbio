---
// src/pages/devocional/index.astro
import Layout from "../../layouts/Layout.astro"
import OpenBookIcon from "../../components/icons/OpenBookIcon.astro"
import { getDevotionals } from "../../helpers/notion"

// Disable prerender so this route fetches fresh data on each request
export const prerender = false;

// Get all devotionals from the last 2 weeks
const devotionals = await getDevotionals()
---

<Layout title="Devocionales - CBI Orlando">
  <div class="container mx-auto px-4 py-16 mt-16">
    <div class="max-w-4xl mx-auto">
      <!-- Header -->
      <header class="mb-12 text-center">
        <div class="flex items-center justify-center gap-4 mb-4">
          <div class="bg-blue-800 rounded-full p-4">
            <OpenBookIcon size={32} color="white" />
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900">Devocionales</h1>
        </div>
        <p class="text-xl text-gray-600">
          Reflexiones diarias para fortalecer tu fe
        </p>
      </header>

      <!-- Devotionals List -->
      {devotionals.length > 0 ? (
        <div class="space-y-6">
          {devotionals.map((devotional:any) => (
            <a
              href={`/devocional/${devotional.id}`}
              class="block bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 p-6 border border-gray-200 hover:border-blue-500"
            >
              <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div class="flex-1">
                  <h2 
                    class="text-2xl font-bold text-gray-900 mb-2 hover:text-blue-800 transition-colors"
                    set:html={devotional.title}
                  />
                  <p class="text-gray-500 mb-3">
                    {new Date(devotional.date).toLocaleDateString('es-ES', {
                      weekday: 'long',
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </p>
                  {devotional.verse && (
                    <p class="text-gray-700 italic line-clamp-2" set:html={devotional.verse} />
                  )}
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-600 text-lg mb-4">
            No hay devocionales disponibles en este momento.
          </p>
          <p class="text-gray-500">
            Vuelve pronto para nuevas reflexiones.
          </p>
        </div>
      )}
    </div>
  </div>
</Layout>

