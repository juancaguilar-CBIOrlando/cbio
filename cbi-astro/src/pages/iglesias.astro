---
import Layout from "../layouts/Layout.astro"
import { iglesias } from "../helpers/cbiIglesiasData"
import {
  MapPin,
  Star,
  User,
  Building,
  Phone,
  ExternalLink,
  Facebook,
} from "@lucide/astro"
---

<Layout title="Iglesias CBI - Centro Bíblico Internacional">
  <!-- Hero Section -->
  <section class="bg-primary text-white relative">
    <div
      class="sm:min-h-[55vh] min-h-[40vh] flex flex-col items-center justify-center text-center px-4">
      <h1 class="text-3xl md:text-5xl font-bold leading-tight max-w-3xl">
        IGLESIAS Centro Bíblico Internacional
      </h1>
      <p class="text-sm md:text-base max-w-2xl text-gray-200">
        Estableciendo el Reino de Dios en el mundo
      </p>
    </div>
  </section>

  <main class="pb-16 min-h-screen bg-slate-50">
    <div class="container mx-auto px-4 py-12 md:py-16">
      <!-- Filter and View Controls -->
      <div
        class="flex flex-col md:flex-row items-center justify-between gap-4 mb-8">
        <!-- Location Filter -->
        <div class="w-full md:w-auto">
          <label
            for="location-filter"
            class="block text-sm font-medium text-gray-700 mb-2">
            Filtrar por ubicación
          </label>
          <select
            id="location-filter"
            class="w-full md:w-64 px-4 py-2.5 rounded-lg border border-gray-300 bg-white text-gray-700 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all shadow-sm">
            <option value="">Todas las ubicaciones</option>
          </select>
        </div>
      </div>

      <!-- Churches Grid -->
      <div
        id="churches-container"
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 md:gap-6">
        {
          iglesias.map((iglesia, index) => (
            <article
              class:list={[
                "church-card group relative bg-white rounded-2xl overflow-hidden transition-all duration-300",
                "hover:shadow-xl hover:-translate-y-1 border border-gray-100 ring-1 ring-primary/20",
                iglesia.featured &&
                  "ring-2 ring-primary/40 sm:col-span-2 lg:col-span-1",
              ]}
              style={`animation-delay: ${index * 50}ms`}>
              {/* Color accent bar */}
              <div class="h-1.5 bg-linear-to-r from-primary to-accent group-hover:h-2 transition-all duration-300" />

              <div class="p-5 md:p-6">
                {/* Location & Principal badges */}
                <div class="flex items-center justify-between gap-2 mb-2">
                  <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-accent/5 text-accent text-xs font-medium">
                    <MapPin class="w-3 h-3" />
                    {iglesia.location}
                  </span>
                  {iglesia.featured && (
                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full bg-primary text-white text-xs font-medium shadow-sm">
                      <Star class="w-3 h-3" fill="currentColor" />
                      Principal
                    </span>
                  )}
                  {iglesia.sisterChurch && (
                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full bg-primary text-white text-xs font-medium shadow-sm">
                      <Star class="w-3 h-3" fill="currentColor" />
                      Iglesia Hermana
                    </span>
                  )}
                </div>

                <h2
                  class="text-xl md:text-2xl font-bold text-accent mb-2 group-hover:text-primary transition-colors"
                  style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.02em;">
                  {iglesia.name}
                </h2>

                <p class="text-gray-600 text-sm mb-4 flex items-center gap-2">
                  <User class="w-4 h-4 text-primary shrink-0" />
                  {iglesia.pastors}
                </p>

                {iglesia?.address && (
                  <p class="text-gray-500 text-xs mb-3 flex items-start gap-2">
                    <Building class="w-4 h-4 text-gray-400 shrink-0 mt-0.5" />
                    <span class="leading-relaxed">{iglesia?.address}</span>
                  </p>
                )}

                {iglesia.phone && (
                  <a
                    href={`tel:${iglesia.phone.replace(/\s/g, "")}`}
                    class="text-gray-600 text-sm mb-4 flex items-center gap-2 hover:text-primary transition-colors group/phone">
                    <Phone class="w-4 h-4 text-gray-400 group-hover/phone:text-primary transition-colors shrink-0" />
                    {iglesia.phone}
                  </a>
                )}

                <div class="border-t border-gray-100 pt-4 mt-4">
                  {/* Social links */}
                  <div class="flex items-center justify-between flex-wrap gap-2">
                    <div class="flex gap-2">
                      {iglesia.facebook && (
                        <a
                          href={iglesia.facebook}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="w-9 h-9 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 hover:bg-accent hover:text-white transition-all duration-200"
                          aria-label={`Facebook de ${iglesia.name}`}>
                          <Facebook
                            class="w-4 h-4"
                            fill="currentColor"
                            stroke="none"
                          />
                        </a>
                      )}
                      {iglesia.instagram && (
                        <a
                          href={iglesia.instagram}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="w-9 h-9 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 hover:bg-linear-to-br hover:from-purple-600 hover:to-pink-500 hover:text-white transition-all duration-200"
                          aria-label={`Instagram de ${iglesia.name}`}>
                          <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24">
                            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                          </svg>
                        </a>
                      )}
                      {iglesia.youtube && (
                        <a
                          href={iglesia.youtube}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="w-9 h-9 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 hover:bg-red-600 hover:text-white transition-all duration-200"
                          aria-label={`YouTube de ${iglesia.name}`}>
                          <svg
                            class="w-4 h-4"
                            fill="currentColor"
                            viewBox="0 0 24 24">
                            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                          </svg>
                        </a>
                      )}
                    </div>

                    {/* Visit website button */}
                    {iglesia.website && (
                      <a
                        href={iglesia.website}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-1.5 px-4 py-2 rounded-full bg-primary text-white text-sm font-medium hover:brightness-90 transition-all shadow-sm hover:shadow-md">
                        Visitar
                        <ExternalLink class="w-3 h-3 mb-1" />
                      </a>
                    )}
                  </div>
                </div>
              </div>
            </article>
          ))
        }
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Card entrance animation */
  .church-card {
    opacity: 0;
    animation: fadeSlideUp 0.5s ease-out forwards;
  }

  @keyframes fadeSlideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* List view styles (toggled via JS on mobile) */
  .list-mode .church-card {
    grid-column: 1 / -1;
  }

  .list-mode .church-card > div:last-child {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 768px) {
    .list-mode .church-card > div:last-child {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      gap: 1.5rem;
    }
  }

  /* Hover effects enhancement */
  .church-card:hover {
    box-shadow:
      0 20px 25px -5px color-mix(in srgb, var(--primary) 10%, transparent),
      0 10px 10px -5px color-mix(in srgb, var(--accent) 4%, transparent);
  }
</style>

<script define:vars={{ iglesias }}>
  function extractCountry(location) {
    // If location contains a comma, take the part after the comma (country)
    const parts = location.split(",").map((part) => part.trim())
    return parts.length > 1 ? parts[parts.length - 1] : location
  }

  const countries = [
    ...new Set(iglesias.map((iglesia) => extractCountry(iglesia.location))),
  ].sort()

  // Populate the location filter dropdown
  const locationFilter = document.getElementById("location-filter")
  if (locationFilter) {
    countries.forEach((country) => {
      const option = document.createElement("option")
      option.value = country
      option.textContent = country
      locationFilter.appendChild(option)
    })
  }

  // Get all church cards
  const churchCards = document.querySelectorAll(".church-card")

  // Filter functionality
  locationFilter?.addEventListener("change", (e) => {
    const selectedCountry = e.target.value

    churchCards.forEach((card, index) => {
      const iglesia = iglesias[index]
      const churchCountry = extractCountry(iglesia.location)

      if (selectedCountry === "" || churchCountry === selectedCountry) {
        card.style.display = ""
        // Re-trigger animation
        card.style.animation = "none"
        setTimeout(() => {
          card.style.animation = ""
        }, 10)
      } else {
        card.style.display = "none"
      }
    })
  })
</script>
