---
import Layout from "../layouts/Layout.astro"
import { iglesias } from "../helpers/cbiIglesiasData"

---

<Layout title="Iglesias CBI - Centro Bíblico Internacional">
  <!-- Hero Section -->
  <section class="bg-primary text-white relative">
    <div class="sm:min-h-[55vh] min-h-[40vh] flex flex-col items-center justify-center text-center px-4">
      <h1 class="text-3xl md:text-5xl font-bold leading-tight max-w-3xl">
        IGLESIAS Centro Bíblico Internacional
      </h1>
      <p class="mt-4 text-sm md:text-base text-white/70 max-w-2xl">
        CBI presente en múltiples ciudades alrededor del mundo
      </p>
    </div>
  </section>

  <main class="pb-16 min-h-screen bg-gradient-to-br from-slate-50 via-white to-emerald-50/30">
    <div class="container mx-auto px-4 py-12 md:py-16">
        <!-- Toggle for view mode (mobile) -->
        <div class="flex justify-center mb-8 md:hidden">
          <div class="inline-flex rounded-lg bg-gray-100 p-1">
            <button id="grid-view" class="view-toggle px-4 py-2 text-sm font-medium rounded-md bg-white text-accent shadow-sm transition-all">
              Cuadrícula
            </button>
            <button id="list-view" class="view-toggle px-4 py-2 text-sm font-medium rounded-md text-gray-600 hover:text-gray-900 transition-all">
              Lista
            </button>
          </div>
        </div>

        <!-- Churches Grid -->
        <div id="churches-container" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4 md:gap-6">
          {iglesias.map((iglesia, index) => (
            <article 
              class:list={[
                "church-card group relative bg-white rounded-2xl overflow-hidden transition-all duration-300",
                "hover:shadow-xl hover:-translate-y-1 border border-gray-100 ring-1 ring-primary/20",
                iglesia.featured && "ring-2 ring-primary/40 sm:col-span-2 lg:col-span-1"
              ]}
              style={`animation-delay: ${index * 50}ms`}
            >
              {/* Color accent bar */}
              <div class="h-1.5 bg-gradient-to-r from-primary to-accent group-hover:h-2 transition-all duration-300"></div>
              
              <div class="p-5 md:p-6">
                {/* Location & Principal badges */}
                <div class="flex items-center justify-between gap-2 mb-2">
                  <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full bg-accent/5 text-accent text-xs font-medium">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    </svg>
                    {iglesia.location}
                  </span>
                  {iglesia.featured && (
                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full bg-primary text-white text-xs font-medium shadow-sm">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                      </svg>
                      Principal
                    </span>
                  )}
                </div>
                
                {/* Church name */}
                <h2 class="text-xl md:text-2xl font-bold text-accent mb-2 group-hover:text-primary transition-colors" style="font-family: 'Bebas Neue', sans-serif; letter-spacing: 0.02em;">
                  {iglesia.name}
                </h2>
                
                {/* Pastors */}
                <p class="text-gray-600 text-sm mb-4 flex items-center gap-2">
                  <svg class="w-4 h-4 text-primary flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  {iglesia.pastors}
                </p>
                
                {/* Address if available */}
                {iglesia?.address && (
                  <p class="text-gray-500 text-xs mb-3 flex items-start gap-2">
                    <svg class="w-4 h-4 text-gray-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                    </svg>
                    <span class="leading-relaxed">{iglesia?.address}</span>
                  </p>
                )}
                
                {/* Phone */}
                {iglesia.phone && (
                  <a 
                    href={`tel:${iglesia.phone.replace(/\s/g, '')}`}
                    class="text-gray-600 text-sm mb-4 flex items-center gap-2 hover:text-primary transition-colors group/phone"
                  >
                    <svg class="w-4 h-4 text-gray-400 group-hover/phone:text-primary transition-colors flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    {iglesia.phone}
                  </a>
                )}
                
                {/* Divider */}
                <div class="border-t border-gray-100 pt-4 mt-4">
                  {/* Social links */}
                  <div class="flex items-center justify-between flex-wrap gap-2">
                    <div class="flex gap-2">
                      {iglesia.facebook && (
                        <a 
                          href={iglesia.facebook}
                          target="_blank"
                          rel="noopener noreferrer"
                        class="w-9 h-9 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 hover:bg-accent hover:text-white transition-all duration-200"
                        aria-label={`Facebook de ${iglesia.name}`}
                        >
                          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>
                          </svg>
                        </a>
                      )}
                      {iglesia.instagram && (
                        <a 
                          href={iglesia.instagram}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="w-9 h-9 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 hover:bg-gradient-to-br hover:from-purple-600 hover:to-pink-500 hover:text-white transition-all duration-200"
                          aria-label={`Instagram de ${iglesia.name}`}
                        >
                          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"></path>
                          </svg>
                        </a>
                      )}
                      {iglesia.youtube && (
                        <a 
                          href={iglesia.youtube}
                          target="_blank"
                          rel="noopener noreferrer"
                          class="w-9 h-9 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 hover:bg-red-600 hover:text-white transition-all duration-200"
                          aria-label={`YouTube de ${iglesia.name}`}
                        >
                          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"></path>
                          </svg>
                        </a>
                      )}
                    </div>
                    
                    {/* Visit website button */}
                    {iglesia.website && (
                      <a 
                        href={iglesia.website}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-1.5 px-4 py-2 rounded-full bg-primary text-white text-sm font-medium hover:brightness-90 transition-all shadow-sm hover:shadow-md"
                      >
                        Visitar
                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                        </svg>
                      </a>
                    )}
                  </div>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Card entrance animation */
  .church-card {
    opacity: 0;
    animation: fadeSlideUp 0.5s ease-out forwards;
  }

  @keyframes fadeSlideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* List view styles (toggled via JS on mobile) */
  .list-mode .church-card {
    grid-column: 1 / -1;
  }

  .list-mode .church-card > div:last-child {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 768px) {
    .list-mode .church-card > div:last-child {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      gap: 1.5rem;
    }
  }

  /* Hover effects enhancement */
  .church-card:hover {
    box-shadow: 0 20px 25px -5px color-mix(in srgb, var(--primary) 10%, transparent), 0 10px 10px -5px color-mix(in srgb, var(--accent) 4%, transparent);
  }
</style>

<script>
  // Mobile view toggle functionality
  const gridBtn = document.getElementById('grid-view');
  const listBtn = document.getElementById('list-view');
  const container = document.getElementById('churches-container');

  gridBtn?.addEventListener('click', () => {
    container?.classList.remove('list-mode');
    gridBtn.classList.add('bg-white', 'text-accent', 'shadow-sm');
    gridBtn.classList.remove('text-gray-600');
    listBtn?.classList.remove('bg-white', 'text-accent', 'shadow-sm');
    listBtn?.classList.add('text-gray-600');
  });

  listBtn?.addEventListener('click', () => {
    container?.classList.add('list-mode');
    listBtn?.classList.add('bg-white', 'text-accent', 'shadow-sm');
    listBtn?.classList.remove('text-gray-600');
    gridBtn?.classList.remove('bg-white', 'text-accent', 'shadow-sm');
    gridBtn?.classList.add('text-gray-600');
  });
</script>
