---
import Layout from "@/layouts/Layout.astro"
import CountDown from "@/components/common/CountDown.astro"
---

<Layout title="Un CorazÃ³n Para Su Casa - CBI Orlando" navLogo="white">
    <section
        class="min-h-screen bg-[#2e313d] flex flex-col items-center justify-center px-4 py-20">
        <div class="text-center max-w-4xl mx-auto">
            <div class="mb-8">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="200"
                    height="200"
                    viewBox="0 0 100 100"
                    fill="#fcd22a"
                    class="heart-beat mx-auto drop-shadow-lg">
                    <path d="M50 95 L5 50 L30 25 L50 45 L70 25 L95 50 Z"></path>
                </svg>
            </div>
            <CountDown targetDate="2026-03-29T00:00:00" />
        </div>
    </section>
</Layout>

<style>
    .heart-beat {
        animation: heartbeat 1.2s ease-in-out infinite;
    }

    @keyframes heartbeat {
        0% {
            transform: scale(1);
        }
        14% {
            transform: scale(1.15);
        }
        28% {
            transform: scale(1);
        }
        42% {
            transform: scale(1.15);
        }
        70% {
            transform: scale(1);
        }
    }
</style>
