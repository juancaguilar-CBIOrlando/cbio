---
import Layout from "../layouts/Layout.astro"
import { Image } from "astro:assets"
import {
    ArrowLeft,
    Calendar,
    MapPin,
    ArrowRight,
    ChevronRight,
    Users,
    Clock,
    BookOpen,
    Heart,
    Megaphone,
    CheckCircle,
    Shirt,
    GraduationCap,
} from "@lucide/astro"
import { events, getFeaturedEvents } from "../helpers/eventsData.js"
import { address } from "../constants.js"

// Get the Bautizos event data for dynamic info (date, image, etc.)
const event = events.find((e) => e.title === "Bautizos")!

// Get other featured events for recommendations
const otherEvents = getFeaturedEvents()
    .filter((e) => e.id !== event.id)
    .slice(0, 3)
---

<Layout title="Bautizos - CBI Orlando" navLogo="white">
